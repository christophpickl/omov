<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

		
	<bean id="CurrentApplicationVersion" class="net.sourceforge.omov.core.common.VersionMinorMajor"><constructor-arg>
		<value>0.5</value></constructor-arg></bean>
		
		
		
		
	<bean id="IDatabaseConnection" class="net.sourceforge.omov.core.model.db4o.Db4oConnection">
		<constructor-arg><value>omov.db4</value></constructor-arg> <!-- database filename -->
	</bean>
	
	<bean id="IMovieDao" class="net.sourceforge.omov.core.model.db4o.Db4oMovieDao"><constructor-arg>
		<ref bean="IDatabaseConnection"/></constructor-arg></bean>
		
	<bean id="ISmartFolderDao" class="net.sourceforge.omov.core.model.db4o.Db4oSmartFolderDao"><constructor-arg>
		<ref bean="IDatabaseConnection"/></constructor-arg></bean>
		
	<bean id="IDataVersionDao" class="net.sourceforge.omov.core.model.db4o.Db4oDataVersionDao"><constructor-arg>
		<ref bean="IDatabaseConnection"/></constructor-arg></bean>

</beans>